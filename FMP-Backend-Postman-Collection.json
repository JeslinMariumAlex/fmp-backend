              "pm.test(\"200 OK\", () => pm.response.to.have.status(200));",
              "const res = pm.response.json();",
              "pm.test(\"success true\", () => pm.expect(res.success).to.eql(true));",
              "pm.test(\"data is array\", () => pm.expect(res.data).to.be.an(\"array\"));",
              "pm.test(\"meta present\", () => pm.expect(res).to.have.property(\"meta\"));",
              "// ensure soft-deleted are not included",
              "res.data.forEach(p => pm.expect(p.isDeleted, \"Should not include deleted docs\").to.not.be.true);"
            ],
            "type": "text/javascript"
          }
        }
      ]
